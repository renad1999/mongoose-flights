<%- include('../partials/header') %>

 <h2>Flights List</h2>
 <table>
   <thead>
     <tr>
       <th>Airline</th>
       <th>Flight No</th>
       <th>Airport</th>
       <th>Departure Date</th>
       <th>Detail</th> 
     </tr>
   </thead>
   <tbody>
    <% flights.forEach(function(f) { %> 
         <tr>
         <td><%= f.airline %></td>
         <td><%= f.airport %></td>
         <td><a href="/flights/<%= f._id%>"><%= f.flightNo %></a></td>
         <td><%= f.departs%></td>
         <td>
          <a href="/flights/<%= f._id %>">Detail</a>
         </td>
       </tr>
   <%  }) %>
   </tbody>
 </table>

 <%- include('../partials/header') %>